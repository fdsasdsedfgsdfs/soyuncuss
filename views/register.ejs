<%- include('layout', { body: '', title: 'Kayıt Ol' }) %>

<div class="min-h-screen bg-gray-900 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center">
            <div class="flex justify-center mb-6">
                <div class="bg-blue-500 p-4 rounded-full">
                    <i class="fas fa-user-plus text-white text-3xl"></i>
                </div>
            </div>
            <h2 class="text-3xl font-extrabold text-white">
                Hesap Oluştur
            </h2>
            <p class="mt-2 text-gray-300">
                MinecraftTR sunucusuna katıl! Zaten hesabın var mı? 
                <a href="/login" class="text-blue-400 hover:text-blue-300 font-medium">
                    giriş yap
                </a>
            </p>
        </div>
        
        <form class="mt-8 space-y-6" action="/register" method="POST" onsubmit="return validateForm()">
            <div class="rounded-md shadow-sm space-y-4">
                <div>
                    <label for="username" class="block text-sm font-medium text-gray-300 mb-2">
                        Kullanıcı Adı <span class="text-red-400">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-user text-gray-400"></i>
                        </div>
                        <input id="username" name="username" type="text" required 
                               class="auth-input pl-10" 
                               placeholder="Minecraft kullanıcı adın"
                               minlength="3" maxlength="16"
                               pattern="[a-zA-Z0-9_]+"
                               title="Kullanıcı adı sadece harf, rakam ve alt çizgi içerebilir">
                    </div>
                    <p class="mt-1 text-xs text-gray-400">
                        3-16 karakter, sadece harf, rakam ve alt çizgi
                    </p>
                </div>
                
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-300 mb-2">
                        E-posta Adresi <span class="text-red-400">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-envelope text-gray-400"></i>
                        </div>
                        <input id="email" name="email" type="email" required 
                               class="auth-input pl-10" 
                               placeholder="ornek@email.com">
                    </div>
                </div>
                
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-300 mb-2">
                        Şifre <span class="text-red-400">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-gray-400"></i>
                        </div>
                        <input id="password" name="password" type="password" required 
                               class="auth-input pl-10" 
                               placeholder="Güçlü bir şifre seç"
                               minlength="6"
                               onkeyup="checkPasswordStrength()">
                        <button type="button" onclick="togglePassword('password')" 
                                class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <i class="fas fa-eye text-gray-400 hover:text-gray-300" id="password-toggle"></i>
                        </button>
                    </div>
                    <div class="mt-2">
                        <div class="flex items-center space-x-1">
                            <div class="flex-1 h-2 bg-gray-700 rounded-full">
                                <div id="password-strength-bar" class="h-2 rounded-full transition-all duration-300"></div>
                            </div>
                            <span id="password-strength-text" class="text-xs text-gray-400">Zayıf</span>
                        </div>
                    </div>
                </div>
                
                <div>
                    <label for="confirm-password" class="block text-sm font-medium text-gray-300 mb-2">
                        Şifre Tekrarı <span class="text-red-400">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-gray-400"></i>
                        </div>
                        <input id="confirm-password" name="confirm-password" type="password" required 
                               class="auth-input pl-10" 
                               placeholder="Şifreni tekrar gir"
                               onkeyup="checkPasswordMatch()">
                        <button type="button" onclick="togglePassword('confirm-password')" 
                                class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <i class="fas fa-eye text-gray-400 hover:text-gray-300" id="confirm-password-toggle"></i>
                        </button>
                    </div>
                    <div id="password-match-message" class="mt-1 text-xs"></div>
                </div>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="bg-red-500 bg-opacity-20 border border-red-500 text-red-300 px-4 py-3 rounded-lg">
                    <div class="flex items-center">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        <span><%= error %></span>
                    </div>
                </div>
            <% } %>

            <div class="flex items-start">
                <input id="terms" name="terms" type="checkbox" required
                       class="h-4 w-4 text-blue-500 focus:ring-blue-400 border-gray-600 bg-gray-700 rounded mt-1">
                <label for="terms" class="ml-2 block text-sm text-gray-300">
                    <a href="/terms" class="text-blue-400 hover:text-blue-300">Kullanım Şartları</a> ve 
                    <a href="/privacy" class="text-blue-400 hover:text-blue-300">Gizlilik Politikası</a>'nı 
                    okudum ve kabul ediyorum. <span class="text-red-400">*</span>
                </label>
            </div>

            <div class="flex items-start">
                <input id="newsletter" name="newsletter" type="checkbox"
                       class="h-4 w-4 text-blue-500 focus:ring-blue-400 border-gray-600 bg-gray-700 rounded mt-1">
                <label for="newsletter" class="ml-2 block text-sm text-gray-300">
                    Sunucu haberleri ve güncellemeler hakkında e-posta almak istiyorum
                </label>
            </div>

            <div>
                <button type="submit" id="register-btn" 
                        class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <i class="fas fa-user-plus text-blue-300 group-hover:text-blue-200"></i>
                    </span>
                    Hesap Oluştur
                </button>
            </div>

            <div class="text-center">
                <p class="text-gray-300">
                    Zaten hesabın var mı? 
                    <a href="/login" class="text-blue-400 hover:text-blue-300 font-medium">
                        Giriş yap
                    </a>
                </p>
            </div>
        </form>
        
        <!-- Game Information -->
        <div class="bg-gray-800 border border-gray-700 rounded-lg p-6 mt-8">
            <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
                <i class="fas fa-question-circle text-green-400 mr-2"></i>
                Kayıt Olduktan Sonra Ne Olacak?
            </h3>
            <div class="space-y-3 text-sm text-gray-300">
                <div class="flex items-start">
                    <span class="text-green-400 font-bold mr-2">1.</span>
                    <span>Web sitesinde hesabın oluşturulacak</span>
                </div>
                <div class="flex items-start">
                    <span class="text-green-400 font-bold mr-2">2.</span>
                    <span>Oyunda aynı kullanıcı adı ve şifre ile giriş yapabileceksin</span>
                </div>
                <div class="flex items-start">
                    <span class="text-green-400 font-bold mr-2">3.</span>
                    <span>Market'ten ürün satın alabilir, etkinliklere katılabilirsin</span>
                </div>
                <div class="flex items-start">
                    <span class="text-green-400 font-bold mr-2">4.</span>
                    <span>Profil sayfanda istatistiklerini görüntüleyebilirsin</span>
                </div>
            </div>
        </div>
        
        <!-- Benefits -->
        <div class="bg-gradient-to-r from-green-500 to-blue-500 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-white mb-4">
                Üyelik Avantajları
            </h3>
            <div class="grid grid-cols-1 gap-3 text-sm text-white">
                <div class="flex items-center">
                    <i class="fas fa-gift mr-3 text-yellow-300"></i>
                    <span>Ücretsiz başlangıç paketi</span>
                </div>
                <div class="flex items-center">
                    <i class="fas fa-coins mr-3 text-yellow-300"></i>
                    <span>Günlük giriş ödülleri</span>
                </div>
                <div class="flex items-center">
                    <i class="fas fa-trophy mr-3 text-yellow-300"></i>
                    <span>Özel etkinliklere katılım</span>
                </div>
                <div class="flex items-center">
                    <i class="fas fa-chart-line mr-3 text-yellow-300"></i>
                    <span>Detaylı istatistik takibi</span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function togglePassword(fieldId) {
    const field = document.getElementById(fieldId);
    const toggle = document.getElementById(fieldId + '-toggle');
    
    if (field.type === 'password') {
        field.type = 'text';
        toggle.classList.remove('fa-eye');
        toggle.classList.add('fa-eye-slash');
    } else {
        field.type = 'password';
        toggle.classList.remove('fa-eye-slash');
        toggle.classList.add('fa-eye');
    }
}

function checkPasswordStrength() {
    const password = document.getElementById('password').value;
    const strengthBar = document.getElementById('password-strength-bar');
    const strengthText = document.getElementById('password-strength-text');
    
    let strength = 0;
    let strengthLabel = 'Çok Zayıf';
    let strengthColor = 'bg-red-500';
    
    // Length check
    if (password.length >= 6) strength += 1;
    if (password.length >= 8) strength += 1;
    
    // Character type checks
    if (/[a-z]/.test(password)) strength += 1;
    if (/[A-Z]/.test(password)) strength += 1;
    if (/[0-9]/.test(password)) strength += 1;
    if (/[^A-Za-z0-9]/.test(password)) strength += 1;
    
    switch (strength) {
        case 0:
        case 1:
            strengthLabel = 'Çok Zayıf';
            strengthColor = 'bg-red-500';
            break;
        case 2:
        case 3:
            strengthLabel = 'Zayıf';
            strengthColor = 'bg-orange-500';
            break;
        case 4:
        case 5:
            strengthLabel = 'Orta';
            strengthColor = 'bg-yellow-500';
            break;
        case 6:
            strengthLabel = 'Güçlü';
            strengthColor = 'bg-green-500';
            break;
    }
    
    const percentage = Math.min((strength / 6) * 100, 100);
    strengthBar.style.width = percentage + '%';
    strengthBar.className = `h-2 rounded-full transition-all duration-300 ${strengthColor}`;
    strengthText.textContent = strengthLabel;
    strengthText.className = `text-xs ${strengthColor.replace('bg-', 'text-')}`;
}

function checkPasswordMatch() {
    const password = document.getElementById('password').value;
    const confirmPassword = document.getElementById('confirm-password').value;
    const message = document.getElementById('password-match-message');
    
    if (confirmPassword === '') {
        message.textContent = '';
        message.className = 'mt-1 text-xs';
        return;
    }
    
    if (password === confirmPassword) {
        message.textContent = '✓ Şifreler eşleşiyor';
        message.className = 'mt-1 text-xs text-green-400';
    } else {
        message.textContent = '✗ Şifreler eşleşmiyor';
        message.className = 'mt-1 text-xs text-red-400';
    }
}

function validateForm() {
    const username = document.getElementById('username').value;
    const password = document.getElementById('password').value;
    const confirmPassword = document.getElementById('confirm-password').value;
    const terms = document.getElementById('terms').checked;
    
    // Username validation
    if (!/^[a-zA-Z0-9_]{3,16}$/.test(username)) {
        alert('Kullanıcı adı 3-16 karakter uzunluğunda olmalı ve sadece harf, rakam ve alt çizgi içerebilir.');
        return false;
    }
    
    // Password validation
    if (password.length < 6) {
        alert('Şifre en az 6 karakter uzunluğunda olmalıdır.');
        return false;
    }
    
    // Password match validation
    if (password !== confirmPassword) {
        alert('Şifreler eşleşmiyor.');
        return false;
    }
    
    // Terms validation
    if (!terms) {
        alert('Kullanım şartlarını kabul etmelisiniz.');
        return false;
    }
    
    return true;
}

// Real-time validation
document.getElementById('username').addEventListener('input', function() {
    const username = this.value;
    const button = document.getElementById('register-btn');
    
    if (username.length >= 3 && /^[a-zA-Z0-9_]*$/.test(username)) {
        this.classList.remove('border-red-500');
        this.classList.add('border-gray-600');
    } else if (username.length > 0) {
        this.classList.remove('border-gray-600');
        this.classList.add('border-red-500');
    }
});
</script>