<%- include('layout', { body: '' }) %>

<!-- Hero Section -->
<div class="relative bg-gradient-to-br from-blue-900 via-purple-900 to-indigo-900 overflow-hidden">
    <!-- Background animation -->
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="absolute inset-0" style="background-image: url('/images/minecraft-bg.jpg'); background-size: cover; background-position: center; opacity: 0.3;"></div>
    
    <div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6">
                Türkiye'nin 
                <span class="text-gradient bg-gradient-to-r from-green-400 to-blue-500 bg-clip-text text-transparent">
                    En İyi
                </span>
                <br>Minecraft Sunucusu
            </h1>
            <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto">
                Binlerce oyuncu ile BedWars, SkyWars, Survival ve daha fazlası! 
                Hemen katıl ve eğlenceye başla!
            </p>
            
            <!-- Server IP Copy -->
            <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-4 mb-8">
                <div class="bg-gray-800 bg-opacity-80 backdrop-blur-sm rounded-lg px-6 py-3 flex items-center space-x-3">
                    <i class="fas fa-server text-green-400"></i>
                    <span class="text-lg font-mono text-white">play.minecrafttr.com</span>
                    <button onclick="copyIP()" class="text-green-400 hover:text-green-300 transition-colors" title="IP'yi Kopyala">
                        <i class="fas fa-copy"></i>
                    </button>
                </div>
                
                <div class="flex items-center space-x-4">
                    <div class="bg-gray-800 bg-opacity-80 backdrop-blur-sm rounded-lg px-4 py-3">
                        <div class="flex items-center space-x-2">
                            <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                            <span class="text-white font-medium" id="hero-player-count">
                                <%= serverStats.online_players %>/<%= serverStats.max_players %> Oyuncu
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-4">
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dashboard" class="btn-primary btn-lg">
                        <i class="fas fa-tachometer-alt mr-2"></i>
                        Panele Git
                    </a>
                <% } else { %>
                    <a href="/register" class="btn-primary btn-lg">
                        <i class="fas fa-user-plus mr-2"></i>
                        Hemen Kayıt Ol
                    </a>
                <% } %>
                <a href="/market" class="btn-secondary btn-lg">
                    <i class="fas fa-shopping-bag mr-2"></i>
                    Marketi Keşfet
                </a>
            </div>
        </div>
    </div>
</div>

